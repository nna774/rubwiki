%h1.title #{path}
#{oid2} → #{oid1} の変更点
%pre
  - diff.each_hunk do |hunk|
    %code.diff_header
      &nbsp;&nbsp;#{hunk.header.force_encoding(Encoding::UTF_8)}
    - hunk.each_line do |line|
      - if line.addition?
        %code.diff_addition +&nbsp;#{line.content.force_encoding(Encoding::UTF_8)}
      - elsif line.deletion?
        %code.diff_deletion -&nbsp;#{line.content.force_encoding(Encoding::UTF_8)}
      - else
        %code &nbsp;&nbsp;#{line.content.force_encoding(Encoding::UTF_8)}
